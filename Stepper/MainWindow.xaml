<mah:MetroWindow x:Class="Stepper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stepper"
        mc:Ignorable="d"
        Title="X,Y Table Stepper Motor Control" Height="284" Width="714" BorderBrush="{DynamicResource MahApps.Brushes.Border.NonActive}" WindowStartupLocation="CenterScreen" WindowTitleBrush="#FF060404">
    <Grid x:Name="StepperMotorControl" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="StepperX Move" HorizontalAlignment="Left" Margin="87,87,0,0" VerticalAlignment="Top"/>
        <Label Content="StepperY Move" HorizontalAlignment="Left" Margin="87,118,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtStepperYMove" HorizontalAlignment="Left" Margin="203,120,0,0" Text="4.00" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
        <Label Content="mm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="323,116,0,0"/>
        <TextBox x:Name="txtStepperXMove" HorizontalAlignment="Left" PreviewTextInput="TextBox_OnPreviewTextInput" Margin="203,89,0,0" Text="4.00" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
        <Label Content="mm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="323,85,0,0"/>
        <Button x:Name="btnRun" Content="Run" HorizontalAlignment="Left" Height="28" Margin="102,185,0,0" VerticalAlignment="Top" Width="104" Click="btnRun_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Height="28" Margin="427,185,0,0" VerticalAlignment="Top" Width="104" Click="btnStop_Click"/>
        <Label x:Name="lblbaudRate" Content="BaudRate" HorizontalAlignment="Left" Margin="92,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBaudRate" HorizontalAlignment="Left" PreviewTextInput="TextBox_OnPreviewTextInput" Margin="203,34,0,0" TextWrapping="Wrap" Text="9600" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
        <TextBox x:Name="txtMotorSpeed" HorizontalAlignment="Left" PreviewTextInput="TextBox_OnPreviewTextInput" Margin="515,88,0,0" Text="500.00" VerticalAlignment="Top" Width="120" TextAlignment="Right" />
        <Label x:Name="MotorSpeed" Content="Motor Speed" HorizontalAlignment="Left" Margin="374,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMotorAcceleration" HorizontalAlignment="Left" PreviewTextInput="TextBox_OnPreviewTextInput" Margin="515,120,0,0" Text="10.00" VerticalAlignment="Top" Width="120" TextAlignment="Right" />
        <Label x:Name="MotorAcceleration" Content="Motor Acceleration" HorizontalAlignment="Left" Margin="374,114,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnGoHome" Content="Go Home" HorizontalAlignment="Left" Height="28" Margin="263,185,0,0" VerticalAlignment="Top" Width="104" Click="btnGoHome_Click"/>
        <Label x:Name="lblComPort" Content="ComPort" HorizontalAlignment="Left" Margin="374,30,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbComPort" HorizontalAlignment="Left" Margin="515,34,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="COM5" IsSelected="True"/>
            <ComboBoxItem Content="COM3"/>
        </ComboBox>
    </Grid>
</mah:MetroWindow>