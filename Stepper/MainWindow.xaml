<Window x:Class="Stepper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stepper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="StepperX Move" HorizontalAlignment="Left" Margin="87,122,0,0" VerticalAlignment="Top"/>
        <Label Content="StepperY Move" HorizontalAlignment="Left" Margin="87,153,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtStepperYMove" HorizontalAlignment="Left" Margin="203,155,0,0" Text="4.00" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
        <TextBox x:Name="txtStepperXMove" HorizontalAlignment="Left" Margin="203,124,0,0" Text="4.00" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
        <Button x:Name="btnRun" Content="Run" HorizontalAlignment="Left" Height="28" Margin="102,237,0,0" VerticalAlignment="Top" Width="104" Click="btnRun_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Height="28" Margin="300,237,0,0" VerticalAlignment="Top" Width="104" Click="btnStop_Click"/>
        <Label x:Name="lblbaudRate" Content="BaudRate" HorizontalAlignment="Left" Margin="92,85,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBaudRate" HorizontalAlignment="Left" Margin="203,85,0,0" TextWrapping="Wrap" Text="9600" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
    </Grid>
</Window>